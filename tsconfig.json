{
    "compilerOptions": {
      "allowUnreachableCode": false,
      "declaration": true,
      "esModuleInterop": true,
      "importHelpers": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "noFallthroughCasesInSwitch": true,
      "noUnusedLocals": false,
      "outDir": "./dist",
      "pretty": true,
      "strict": true,
      "target": "es2019",
      "lib": ["dom", "es2019"]
    },
    "include": ["src/*.ts","src/**/*.ts"],
  }
